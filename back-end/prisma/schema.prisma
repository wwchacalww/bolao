// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db?socket_timeout=3000&connection_limit=1"
}

model Countries {
  id    String @id @default(uuid())
  name  String
  slug  String
  group String
  flag  String

  @@map("countries")
}

model Games {
  id                String  @id @default(uuid())
  played_at         String
  first_country_id  String
  second_country_id String
  group             String  @default("GRUPO A")
  match_score       String?
  status            String?
  result            String?
  Bets              Bets[]

  @@map("games")
}

model Players {
  id    String @id @default(uuid())
  name  String
  score Int
  Bets  Bets[]

  @@map("players")
}

model Bets {
  id        String  @id @default(uuid())
  bet       String
  player    Players @relation(fields: [player_id], references: [id])
  player_id String
  game      Games   @relation(fields: [game_id], references: [id])
  game_id   String

  @@map("bets")
}
